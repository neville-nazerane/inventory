@attribute [Authorize]
@page "/"
<PageTitle>Home</PageTitle>


<div class="container mt-4">
    <!-- Input with Add Button in the Left Column -->
    <div class="row mb-3">
        <div class="col-md-4">
            @if(addLoading)
            {
                <Loading />
            }
            else{
                <form class="input-group" @onsubmit=AddLocationAsync>
                    <input @bind-value=newLocationName class="form-control" placeholder="Add new item">
                    <button class="btn btn-primary">Add</button>
                </form>
            }
        </div>
    </div>

    <div class="row">

        @foreach (var loc in locations)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header bg-light d-flex align-items-center">
                        <span>@loc.Name</span>
                        <div class="ms-auto">
                            <button class="btn btn-sm btn-secondary me-2">
                                <i class="fa-solid fa-pencil"></i>
                            </button>

                            <button class="btn btn-sm btn-danger">
                                <i class="fa-regular fa-trash-can"></i>
                            </button>

                            <button class="btn btn-primary">
                                <i class="fa-solid fa-chevron-down"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">

                    </div>
                </div>
            </div>
        }
    </div>


</div>
